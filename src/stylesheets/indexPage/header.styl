header 
	height 300px
	background linear-gradient(top, blue, darken(blue, 25%) 100)
	font-family "Electrolize"
	h1
		margin 0
		padding 0
		font-size 200pt
		color white
		line-height inherit
		a, a:hover, a:visited 
			color inheritz
			text-decoration none
		
		small
			opacity 0
			font-weight normal
			width 150px
			margin-left 25px
			display inline-block
			span
				display inline-block
				height 0
				width 0
				zoom 1
				border solid 100px transparent
				border-left-width 150px
				border-right-width 150px
				border-left-color white
			
		
		&:hover small 
			opacity 1
