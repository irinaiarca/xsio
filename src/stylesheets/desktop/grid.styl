container()
	display block
	margin 0 auto
	overflow hidden
	width 1200px
	text-align left

.container	
	container()
	.container
		width auto
		padding 25px

.bordered
	border-radius 10px
	border solid 1px #ccc
	padding 5px 15px

.solid 
	background #fff linear-gradient(rgba(0, 0 ,0, 0.1) 0, rgba(256, 256, 256, 0) 50px)
	padding 5px 15px
	margin 25px 0
	position relative
	transition all 0.5s ease-in-out
	&:before
		z-index -1
		content ""
		position absolute
		top 10px
		bottom 10px
		left 0
		right 0
		border-radius 10px/100px
		box-shadow 0 0 15px #999
	&:hover
		box-shadow 0 0 15px #ccc

.impact 
	padding 100px 0 50px 0
	font-family Electrolize
	* 
		margin 0
		padding 0
		display inline-block
	h1 
		font-size 100pt
		color blue
	p
		font-size 38pt
		color #ccc

	
span()
	display inline-block
	margin 0
	margin-right 40px
	float left

.spaced 
	margin 25px

.row
	margin: 25px 0
	&:after
		content: ""
		display block
		clear both
	> *
		&:first-child
			clear left
		&:last-child 
			margin-right 0 !important
			clear right
	.span1
		span()
		width 260px
		&.solid, &.bordered
			width 228px
		&:last-child
			width 300px
			&.solid, &.bordered
				width 268px 

	.span3
		span()
		width 860px
		&.solid, &.bordered
			width 828px
		&:last-child
			width 900px
			&.solid, &.bordered
				width 868px

	.span2
		span()
		width 560px
		&.solid, &.bordered
			width 528px
		&:last-child
			width 600px
			&.solid, &.bordered
				width 568px
