
body
	height 100%
	width 100%
	background #fff
	color #444
	font-size 10pt
	font-family: "Source Sans Pro", "Segoe Ui", "Helvetica Neue", "Gill Sans", "Helvetica", sans-serif;
	margin 0
	padding 0
	p
		&.container 
			padding 25px
		text-indent 25px
		i
			margin-left -25px
		&.red-bg, &.blue-bg, &.purple-bg, &.pink_bg, &.yellow-bg, &.orange-bg, &.green-bg 
			box-shadow inset 0 0 5px rgba(0, 0, 0, 0.2)
			&.container
				box-shadow inset 0 0 25px rgba(0, 0, 0, 0.3)

	i 
		margin-right 5px

body 
	@import "header"
	@import "grid"
	@import "aside"
	@import "section"	
	@import "headings"
	@import "monospaced"
	@import "buttons"
	@import "misc"
